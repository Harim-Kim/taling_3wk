<h1>Post#index</h1>
<p>Find me in app/views/post/index.html.erb</p>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">title</th>
      <th scope="col">content</th>
      <th scope="col">views</th>
    </tr>
  </thead>
  <tbody>
    <% if @posts.count == 0 %>
        <p>no Posts</p>
    <% end %>
    <% @posts.each do |p| %>
    <tr>
      <th scope="row"><%=p.id%></th>
      <td><%=p.title%></td>
      <td><%=p.content%></td>
      <td><%=p.views%></td>
    </tr>
    <%end%>
  </tbody>
</table>
<a href="/post/new">게시물쓰기</a>
